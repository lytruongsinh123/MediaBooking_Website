<!DOCTYPE html>




<!-- user. được truyền từ bên homeController qua  return res.render('editCRUD.ejs', {
    user: userData
  }); -->
<html>
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <title>Edit User Information</title>
    <meta name="description" content="" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="" />

    <!-- Latest compiled and minified CSS -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css"
    />

    <!-- jQuery library -->
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.7.1/dist/jquery.slim.min.js"></script>

    <!-- Popper JS -->
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>

    <!-- Latest compiled JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
  </head>
  <body>
    <div class="container">
      <div class="row">
        <form action="/put-crud" method="POST">
          <div class="form-row">
            <div class="col-12 mt-3"><b>Edit Information User</b></div>
            <div class="form-group col-md-6">
              <label for="inputEmail4">First name</label>
              <input
                type="text"
                class="form-control"
                placeholder="First name"
                name="firstName"
                value="<%= user.firstName %>"
              />
            </div>

            <div class="form-group col-md-6">
              <label for="inputPassword4">Last name</label>
              <input
                type="text"
                class="form-control"
                name="lastName"
                placeholder="Last name"
                value="<%= user.lastName %>" 
              />
            </div>
          </div>

          <div class="form-group">
            <label for="inputAddress">Address</label>
            <input
              type="text"
              class="form-control"
              name="address"
              placeholder="1234 Main St"
              value="<%= user.address %>"
            />
          </div>

          <div class="form-group"></div>
          <input name="id" value="<%= user.id %>" type="text" hidden/>
          <button type="submit" class="btn btn-primary">Updates</button>
        </form>
      </div>
    </div>
    <script src="" async defer></script>
  </body>
</html>
